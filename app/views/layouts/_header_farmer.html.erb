<header class="d-flex">
<nav class="container pt-3">
 <div class="row align-items-center">
  <div class="col-md-2 text-start">
   <div class="navbar-brand mt-5 mb-3">
    <%= link_to "LOGO",root_path %>
   </div>
  </div>
  <ul class="d-flex flex-row offset-4 col-md-6 justify-content-end">
    <li class="d-flex">
     <%= link_to "商品一覧", farmer_items_path, class: "btn btn-outline-secondary text-black", style: "width: 90px;" %>
    </li>
    <li class="d-flex">
     <%= link_to "会員一覧", farmer_customers_path, class: "btn btn-outline-secondary text-black", style: "width: 90px;" %>
    </li>
    <li class="d-flex">
     <%= link_to "日記", farmer_diaries_path, class: "btn btn-outline-secondary text-black", style: "width: 90px;" %>
    </li>
    <li class="d-flex">
     <%= link_to "マイページ", farmer_root_path, class: "btn btn-outline-secondary text-black", style: "width: 90px;" %>
    </li>
    <li class="d-flex">
     <%= link_to "ログアウト", destroy_farmer_session_path, method: :delete, class: "btn btn-outline-secondary text-black", style: "width: 90px;" %>
    </li>
  </ul>
   <div class="search-form d-flex flex-row offset-6 col-md-6 justify-content-end">
    <%= form_with url: farmer_search_path, method: :get, local: true, class:"d-flex align-items-center gap-2" do %>
     <%= text_field_tag :q, params[:q], placeholder: "検索したい商品名を入力", class:"form-control w-auto" %>
     <%= button_tag type: 'submit', class: 'btn btn-outline-secondary d-flex align-items-center' do %>
     <span>検索</span>
     <% end %>
    <% end %>
   </div>
  </div>
 </nav>
</header>