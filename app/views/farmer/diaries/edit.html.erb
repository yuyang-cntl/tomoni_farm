<% if @diary.errors.any? %>
  <div class="alert alert-danger">
  <h4>error</h4>
    <ul>
      <% @diary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container-fluid">
 <div class="row">
  <div class="col-md-8 offset-md-2 mt-5">
   <h1 class="mt-5 mb-5">日記を編集</h1>
  </div>
 </div>

 <%= form_with model:@diary, url: farmer_diary_path(@diary), html: { multipart: true } do |f| %>
 <div class= "row">
  <div class="mt-5 mb-3 col-md-2 offset-md-2">
   <%=f.label :images, "画像" %>
  </div>
  <div class="field mt-5 mb-3 col-md-8">
   <%= f.file_field :images, multiple:true, class: "form-control-file", style: "width: 450px;" %>
  </div>
  <div class="field mb-3 col-md-2 offset-md-2">
   <%=f.label :title, "タイトル" %>
  </div>
  <div class="field mb-3 col-md-8">
   <%= f.text_field :title, class: "form-control", style: "width: 450px;" %>
  </div>
  <div class="field mb-3 col-md-2 offset-md-2">
   <%= f.label :body, "本文" %>
  </div>
  <div class="field mb-3 col-md-8">
   <%= f.text_area :body, class: "form-control", style: "width: 450px;" %>
  </div>
  <div class="actions d-flex justify-content-center col-md-8 offset-md-2">
   <%= f.submit "更新", class: "mt-5 btn btn-outline-secondary", style: "width: 90px;" %>
  </div>
  <div class="actions d-flex justify-content-center col-md-8 offset-md-2">
   <%= link_to "戻る", farmer_diary_path(@diary), class: "mt-3 btn btn-outline-secondary", style: "width: 90px;" %>
  </div>
 </div>
 <% end %>
</div>