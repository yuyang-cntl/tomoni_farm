<% if flash[:notice] %>
 <div class="alert alert-success">
  <%= flash[:notice] %>
 </div>
<% end %>

<h3><strong><%= @post.title %></strong>の投稿</h3>
<% if @post.images.attached? %>
<% @post.images.each do |image| %>
 <%= image_tag image.variant(resize_to_limit: [300,300]), class: "post-image" %>
<% end %>
<% else %>
 <p>画像は未登録です</p>
<% end %>
<h3>タイトル：<%= @post.title %></h3>
<h3>本文：<%= @post.body %></h3>
<%= link_to "編集", edit_farmer_diary_post_path(@diary,@post), class: "btn btn-primary" %>
<%= link_to "削除", farmer_diary_post_path(@diary,@post), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-primary" %>

<p>いいね数：♥<%= @post.likes.count %></p>
  <%= link_to "いいねしたユーザーを見る", farmer_diary_post_likes_path(@diary, @post) %>
</p>

<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
    <p><%= image_tag comment.customer.get_profile_image(100,100) %></p>
    <%= post.customer.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
  <% end %>
</div>
