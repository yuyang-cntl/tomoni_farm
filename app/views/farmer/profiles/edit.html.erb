<% if @farmer.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @farmer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<div class="container-fluid">
 <div class="row"> 
  <div class="col-md-8 offset-md-2 mt-5">
  <h1 class="mt-5">プロフィール更新</h1>
  <%= form_with model:@farmer, url:farmer_profile_path, scope: :farmer, method: :patch, local: true, html: { multipart: true } do |f| %>
  <div class="field mt-5 mb-3">
   <%= f.label :image, "プロフィール画像" %>
   <%= f.file_field :profile_image, class:"form-control-file" %>
  </div>
 </div>

 <div class="row mt-3">
  <div class="field mb-3 col-md-2 offset-2">
   <%= f.label :name, "名前" %>
  </div>
  <div class="field mb-3 col-md-8">
   <%= f.text_field :name, autofocus: true, autocomplete: "name", style: "width: 450px;" %>
  </div>

  <div class="field mb-3 col-md-2 offset-2">
   <%= f.label :email, "メールアドレス" %>
  </div>
  <div class="field mb-3 col-md-8">
   <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", style: "width: 450px;" %>
  </div>
   <%= f.fields_for :location do |loc| %>
    <div class="input-group mb-3 col-md-2 offset-md-2">
     <%= loc.label :postal_code, "郵便番号" %>
    </div>
    <div class="field mb-3 col-md-8">
     <%= loc.text_field :postal_code, style: "width: 450px;" %>
    </div>
    <div class="field mb-3 col-md-2 offset-md-2">
     <%= loc.label :prefecture, "都道府県" %>
    </div>
    <div class="field mb-3 col-md-8">
     <%= loc.text_field :prefecture, style: "width: 450px;" %>
    </div>
    <div class="field mb-3 col-md-2 offset-md-2">
     <%= loc.label :city, "市区町村" %>
    </div>
    <div class="field mb-3 col-md-8">
     <%= loc.text_field :city, style: "width: 450px;" %>
    </div>
    <div class="field mb-3 col-md-2 offset-md-2">
     <%= loc.label :street, "番地・建物名" %>
    </div>
    <div class="field mb-3 col-md-8">
     <%= loc.text_field :street, style: "width: 450px;" %>
    </div>
   <% end %>
  <div class="actions d-flex justify-content-center col-md-8 offset-md-2 mt-3">
   <%= f.submit "更新", class: "btn btn-outline-secondary", style: "width: 150px;" %>
  </div>
  <% end %>
  
  <div class="d-flex justify-content-center col-md-8 offset-md-2 mt-3">
   <%= link_to "パスワード変更", edit_farmer_password_change_path, class: "btn btn-outline-secondary", style: "width: 150px;" %>
  </div>
 </div>
</div>
