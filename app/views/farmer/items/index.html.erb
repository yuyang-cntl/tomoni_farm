<% if @item.errors.any? %>
  <div class="alert alert-danger">
  <h4>error</h4>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if flash[:notice] %>
 <div class="alert alert-success">
  <%= flash[:notice] %>
 </div>
<% end %>

<div class="container-fluid">
 <div class="row align-items-start">
  <div class="col-md-10 offset-md-2 mt-5">
   <h1 class="mt-5 mb-5">商品一覧</h1>
  </div>
 </div>
 <div class="row item-list justify-content-center">
  <% @items.each do |item| %>
   <div class="item-card mt-3 col-md-5">
    <h3 class="mb-3"><%= item.name %></h3>
    <div class="row">
     <div class="col-md-6">
      <% if item.images.attached? %>
       <% item.images.each do |image| %>
        <%= image_tag image.variant(resize_to_limit: [250,250]), class: "item-image" %>
       <% end %>
      <% else %>
       <p>画像は未登録です</p>
      <% end %>
     </div>
     <div class="col-md-4 offset-md-1 d-flex flex-column">
      <%= link_to '商品詳細', farmer_item_path(item), class: "mb-5 btn btn-outline-secondary", style: "width: 120px;" %>
      <%= link_to 'この商品の日記を投稿', new_farmer_diary_path, class: "mb-5 btn btn-outline-secondary", style: "width: 120px;" %>
     </div>
    </div>
   </div>
  <% end %>
 </div>
</div>