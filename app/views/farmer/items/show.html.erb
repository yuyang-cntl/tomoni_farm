<% if flash[:notice] %>
 <div class="alert alert-success">
  <%= flash[:notice] %>
 </div>
<% end %>

<div class="container-fluid">
 <div class="row">
  <div class="item-card col-md-8 offset-md-2 mt-5">
   <h1 class="mt-3 mb-5"><strong><%= @item.name %></strong>の商品情報</h1>
   <% if @item.images.attached? %>
    <% @item.images.each do |image| %>
    <%= image_tag image.variant(resize_to_limit: [300,300]), class: "item-image" %>
   <% end %>
   <% else %>
    <p>画像は未登録です</p>
   <% end %>
   <h3 class="mt-3">商品説明：<%= @item.introduction %></h3>
   <h3 class="mt-3">税込価格：<%= @item.price %>円</h3>
   <h3 class="mt-3">収穫時期：<%= @item.harvest_time %></h3>
   <h3 class="mt-3">販売ステータス：<%= @item.status_label %></h3>
   <%= link_to "編集", edit_farmer_item_path(@item), class: "mt-3 btn btn-outline-secondary", style: "width: 90px;" %>
   <%= link_to "削除", farmer_item_path(@item), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "mt-3 btn btn-outline-secondary", style: "width: 90px;" %>
  </div>
 </div>
</div>