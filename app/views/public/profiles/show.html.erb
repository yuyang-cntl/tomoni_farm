<% if flash[:notice] %>
 <div class="alert alert-success">
  <%= flash[:notice] %>
 </div>
<% end %>

<div class="container-fluid>
 <div class="row align-items-center">
  <div class="col-md-10 offset-1 mt-5">
   <h1 class="mb-5"><%= @customer.name %>さんのページ</h1>
   <%= image_tag(@customer.get_profile_image(100, 100), alt: "Customer image", class: "profile-image") %>
  <%= link_to "フォロー中の生産者一覧", public_farmers_path, class: "btn btn-outline-secondary" %>
  <%= link_to "会員情報編集", edit_public_profile_path, class: "btn btn-outline-secondary" %>
  <%= link_to "配送先一覧", public_addresses_path, class: "btn btn-outline-secondary" %>
  <%= link_to "注文履歴一覧", public_orders_path, class: "btn btn-outline-secondary" %>
  <%= link_to "退会", confirm_destroy_public_profile_path, class: "btn btn-outline-secondary" %>
  </div>
 </div>
</div>