<% if flash[:notice] %>
 <div class="alert alert-success">
  <%= flash[:notice] %>
 </div>
<% end %>

<div class="container-fluid">
 <div class="row justify-content-start align-items-end">
  <div class="col-12 col-md-5 offset-md-1 text-center mt-5">
   <h1 class="mt-5"><strong><%= @customer.name %>さん</strong>のページ</h1>
   <p class="text-muted mb-5">ご注文履歴や配送先の確認ができます。</p>
   <%= image_tag(@customer.get_profile_image(150, 150), alt: "Customer image", class: "profile-image") %>
  </div>

  <div class="col-12 col-md-4">
   <p class="text-muted">商品情報</p>
   <div class="d-flex flex-wrap text-start">
    <%= link_to "商品", public_items_path, class: "mr-3 btn btn-outline-secondary flex-fill" %>
    <%= link_to "生産者", public_farmers_path, class: "mr-3 btn btn-outline-secondary flex-fill" %>
    <%= link_to "注文履歴", public_orders_path, class: "btn btn-outline-secondary flex-fill" %>
   </div>
   <p class="text-muted mt-3">会員情報</p>
   <div class="d-flex flex-wrap">
    <%= link_to "会員情報", edit_public_profile_path, class: "mr-3 btn btn-outline-secondary flex-fill" %>
    <%= link_to "配送先", public_addresses_path, class: "mr-3 btn btn-outline-secondary flex-fill" %>
    <%= link_to "退会", confirm_destroy_public_profile_path, class: "btn btn-outline-secondary flex-fill" %>
   </div>
  </div>
 </div>
</div>