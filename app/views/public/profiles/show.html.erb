<% if flash[:notice] %>
 <div class="alert alert-success">
  <%= flash[:notice] %>
 </div>
<% end %>

<div class="container-fluid">
 <div class="row align-items-center">
  <div class="col-md-10 offset-2 mt-5">
   <h1 class="mt-5"><strong><%= @customer.name %>さん</strong>のページ</h1>
   <p class="text-muted mb-5">ご注文履歴や配送先の確認ができます。</p>
   <div class="row">
    <div class="mt-3 col-md-2">
     <%= image_tag(@customer.get_profile_image(150, 150), alt: "Customer image", class: "profile-image") %>
    </div>
    <div class="col-md-8 offset-1">
     <div>
      <p class="text-muted">商品情報</p>
      <%= link_to "商品", public_items_path, class: "btn btn-outline-secondary", style: "width: 120px;" %>
      <%= link_to "生産者", public_farmers_path, class: "btn btn-outline-secondary", style: "width: 120px;" %>
      <%= link_to "注文履歴", public_orders_path, class: "btn btn-outline-secondary", style: "width: 120px;" %>
     </div>
     <div class="mt-3">
     <p class="text-muted">会員ステータス</p>
      <%= link_to "会員情報", edit_public_profile_path, class: "btn btn-outline-secondary mr-4", style: "width: 120px;" %>
      <%= link_to "配送先", public_addresses_path, class: "btn btn-outline-secondary mr-4", style: "width: 120px;" %>
      <%= link_to "退会", confirm_destroy_public_profile_path, class: "btn btn-outline-secondary", style: "width: 120px;" %>
     </div>
    </div>
   </div>
  </div>
 </div>
</div>