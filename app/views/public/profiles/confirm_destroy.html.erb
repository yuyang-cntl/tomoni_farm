<% if flash[:notice] %>
 <div class="alert alert-success">
  <%= flash[:notice] %>
 </div>
<% end %>

<div class="container-fluid">
 <div class="row align-items-start">
  <div class="col-md-6 mx-auto mt-5">
   <h2 class="mt-5 mb-5">本当に退会しますか？</h2>
  </div>
 </div>
 <div class="row">
  <div class="d-flex col-md-6 mx-auto mt-5">
   <%= link_to "退会する", public_profile_path,
    method: :delete,
    data: {confirm: "本当に削除しますか？"},
    class: "mr-5 btn btn-danger w-50" %>
   <%= link_to "キャンセル", public_profile_path, class: "btn btn-secondary w-50" %>
  </div>
 </div>
</div>