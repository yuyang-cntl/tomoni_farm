<% if @address.errors.any? %>
  <div class="alert alert-danger">
  <h4>error</h4>
    <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h3>登録住所を編集</h3>
<div class="container text-start py-3">
 <div class="row">
  <div class="col-md-5 mx-auto">
   <%= form_with model:@address, url: public_address_path(@address), html: { multipart: true } do |f| %>
    <div class="field mt-5 mb-3">
     <%= f.label :shipping_name, "宛先", class: "me-4" %>
     <%= f.text_field :shipping_name %>
    </div>

    <div class="field mt-5 mb-3">
     <%= f.label :postal_code, "郵便番号", class: "me-4" %>
     <%= f.text_field :postal_code %>
    </div>

    <div class="field mt-5 mb-3">
     <%= f.label :address, "住所", class: "me-4" %>
     <%= f.text_field :address %>
    </div>

     <div class="actions d-flex justify-content-center col-md-8">
      <%= f.submit "更新", class: "btn btn-primary", style: "width: 150px; margin-left: 210px;" %>
     </div>
    </div>
   <% end %>
  <div class="d-flex">
   <%= link_to public_addresses_path do %>
    <p class="mr-1"><%= '住所一覧' %></p>
   <% end %>
    <%= '|' %>
   <%= link_to public_addresses_path(@address) do %>
    <p class="ml-1"><%= '戻る' %></p>
   <% end %>
  </div>
 </div>
</div>