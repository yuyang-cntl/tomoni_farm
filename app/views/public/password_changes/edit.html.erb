<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<div class="container-fluid">
 <div class="row">
  <div class="col-12 col-md-8 mx-auto mt-5 text-black">
   <h1 class="mt-5 mb-5">パスワード変更</h1>


 <%= form_with model:@customer, url:public_profile_path, scope: :customer, method: :patch, local: true, html: { multipart: true } do |f| %>
  <div class="row">
   <div class="field mb-3 col-12 col-md-4 mt-3">
    <%= f.label :password, "新パスワード(6文字以上)" %>
   </div>
   <div class="field mb-3 col-12 col-md-6 mt-3">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-100" %>
   </div>
   <div class="field mb-5 col-12 col-md-4 mt-3">
    <%= f.label :password_confirmation, "新パスワード（確認）" %>
   </div>
   <div class="field mb-3 col-12 col-md-6 mt-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-100" %>
   </div>
   <div class="actions d-flex justify-content-center col-12 col-md-8 offset-md-2 mt-3">
    <%= f.submit "登録", class: "btn btn-outline-secondary w-50" %>
   </div>
  </div>
  <% end %>
  <div class="actions d-flex justify-content-center col-12 col-md-8 offset-md-2 mt-3">
   <%= link_to "戻る", edit_public_profile_path, class: "mt-3 btn btn-outline-secondary w-50" %>
  </div>
  </div>
 </div>
</div>