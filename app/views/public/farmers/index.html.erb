<div class="vh-100">
<h3>登録農家一覧</h3>
 <% @farmers.each do |farmer| %>
  <div class="farmer-card">
  <h3><%= farmer.name %></h3>
   <% if farmer.images.attached? %>
    <% farmer.images.each do |image| %>
     <%= image_tag image.variant(resize_to_limit: [300,300]), class: "farmer-image" %>
    <% end %>
    <% else %>
     <p>画像は未登録です</p>
    <% end %>
   <%= link_to '商品詳細', current_customer.farmer_path(farmer), style:"font-size: 24px; font-weight: bold;" %>
  </div>
 <% end %>
</div>