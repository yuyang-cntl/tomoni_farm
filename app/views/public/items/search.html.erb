<% if flash[:notice] %>
 <div class="alert alert-success">
  <%= flash[:notice] %>
 </div>
<% end %>


<div class="container-fluid">
 <h1 class="col-12 col-md-8 mx-auto mt-5">検索結果</h1>
 <div class="row item-list justify-content-center">
   <% if @items.present? %>
    <% @items.each do |item| %>
     <div class="item-card mt-5 col-12 col-md-5">
      <h3>生産者：<%= item.farmer.name %></h3><br>
      <h3>商品名：<%= item.name %></h3><br>
      <h3>価格：<%= number_to_currency(item.price, unit: "円(税込)")%>/個 </h3><br>
      <% if item.images.attached? %>
       <% item.images.each do |image| %>
       <%= image_tag image.variant(resize_to_limit: [300,300]), class: "item-image" %>
      <% end %>
      <% else %>
       <p>画像は未登録です</p>
      <% end %>
       <div class="d-flex justify-content-start mt-5">
        <%= link_to "詳細を見る", public_item_path(item), class: "btn btn-outline-secondary w-50" %>
       </div>
     </div>
    <% end %>
   <% else %>
    <p class="col-md-4 mt-5">該当する商品は見つかりませんでした。</p>
   <% end %>
 </div>
</div>