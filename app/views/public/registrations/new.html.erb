<% if @customer.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<div class="container">
 <div class="row"> 
  <div class="col-12 col-md-10 mx-auto mt-5">
   <h1 class="mb-5 col-12 col-md-4 offset-md-2">ユーザー登録</h1>
   <%= form_with model:@customer, url:customer_registration_path, scope: :customer, local: true, html: { multipart: true } do |f| %>
    <div class="field mt-3 mb-3 col-12 col-md-4 offset-md-2">
     <%= f.label :image, "プロフィール画像", class: "form-control-file" %>
     <%= f.file_field :profile_image %>
    </div>
    <div class="field mb-3 col-12 col-md-2 offset-md-2">
     <%= f.label :last_name, "姓" %>
    </div>
    <div class="field mb-3 col-12 col-md-8 mx-auto">
     <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "w-100" %>
    </div>
    <div class="field mb-3 col-12 col-md-2 offset-md-2">
     <%= f.label :first_name, "名" %>
    </div>
    <div class="field mb-3 col-12 col-md-8 mx-auto">
     <%= f.text_field :first_name, autocomplete: "given-name", class: "w-100" %>
    </div>
    <div class="field mb-3 col-12 col-md-2 offset-md-2">
     <%= f.label :last_name, "姓(カナ)" %>
    </div>
    <div class="field mb-3 col-12 col-md-8 mx-auto">
     <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "family-name", class: "w-100" %>
    </div>
    <div class="field mb-3 col-12 col-md-2 offset-md-2">
     <%= f.label :first_name, "名（カナ）" %>
    </div>
    <div class="field mb-3 col-12 col-md-8 mx-auto">
     <%= f.text_field :first_name_kana, autocomplete: "given-name", class: "w-100" %>
    </div>
    <div class="field mb-3 col-12 col-md-3 offset-md-2">
     <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="field mb-3 col-12 col-md-8 mx-auto">
     <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: "w-100" %>
    </div>
    <div class="field mb-3 col-12 col-md-3 offset-md-2">
     <%= f.label :password, "パスワード(6文字以上)" %>
    </div>
    <div class="field mb-3 col-12 col-md-8 mx-auto">
     <%= f.password_field :password, autocomplete: "current-password", class: "w-100" %>
    </div>
    <div class="field mb-3 col-12 col-md-3 offset-md-2">
     <%= f.label :password_confirmation, "パスワード（確認）" %>
    </div>
    <div class="field mb-3 col-12 col-md-8 mx-auto">
     <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
    </div>

    <div class="actions mt-5 d-flex justify-content-center col-md-8 offset-md-2">
     <%= f.submit "登録", class: "btn btn-outline-secondary w-25" %>
    </div>
    <% end %>
    <%= render "public/shared/links" %>
  </div>
 </div>
</div>